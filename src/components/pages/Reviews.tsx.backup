  {
    id: '1',
    reviewerName: 'Sarah Johnson',
    reviewerAvatar: 'https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg?auto=compress&cs=tinysrgb&w=64&h=64&fit=crop',
